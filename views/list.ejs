<%- include("header") -%>
<div class="container">
  <div class="header">
    <h1><%= listTitle %></h1>
  </div>

  <div class="todo-container">
    <% newListItems.forEach(function(item) { %>
    <form action="/delete" method="POST">
      <div class="todo-item">
        <input
          type="checkbox"
          class="todo-checkbox"
          name="checkbox"
          value="<%= item._id %>"
          onchange="this.form.submit()"
        />
        <label for="task-<%= item._id %>" class="todo-content">
          <span class="todo-text"><%= item.name %></span>
        </label>
      </div>
      <input type="hidden" name="listName" value="<%= listTitle %>" />
    </form>
    <% }); %>

    <form class="todo-input" action="/" method="post">
      <input
        type="text"
        placeholder="Add a new task..."
        name="newItem"
        autocomplete="off"
      />
      <button type="submit" name="list" value="<%= listTitle %>">+</button>
    </form>
  </div>
</div>
